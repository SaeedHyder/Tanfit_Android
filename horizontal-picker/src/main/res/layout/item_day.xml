<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="center_horizontal"
    android:orientation="vertical"
    android:id="@+id/base"
    >

    <TextView
        android:text="JUE"
        android:id="@+id/tvWeekDay"
        android:textAllCaps="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:textSize="@dimen/x12"
        android:textColor="@color/secundaryTextColor"
        android:layout_marginTop="@dimen/x3"
        android:fontFamily="sans-serif"
        android:layout_gravity="center" />

    <TextView
        android:text="18/17/18"
        android:textAllCaps="false"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/x9"
        android:textAlignment="center"
        android:id="@+id/tvDay"
        android:layout_gravity="center"
        android:textColor="@color/primaryTextColor"
        android:paddingBottom="@dimen/x4"
        android:paddingTop="@dimen/x4"
        android:paddingStart="@dimen/x2"
        android:paddingEnd="@dimen/x2" />

</LinearLayout>
