<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/app_light_gray"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="@dimen/x20"
            android:layout_marginTop="@dimen/x20"
            android:adjustViewBounds="true"
            android:scaleType="centerInside"
            android:src="@drawable/logo" />

        <com.ingic.tanfit.ui.views.AnyTextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal|center_vertical"
            android:text="@string/address"
            android:textColor="@color/app_blue"
            android:textSize="@dimen/x18"
            app:typeface="@string/font_bold" />

        <com.ingic.tanfit.ui.views.AnyTextView
            android:id="@+id/txt_address"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/x15"
            android:layout_marginStart="@dimen/x15"
            android:layout_marginTop="@dimen/x3"
            android:alpha="0.8"
            android:gravity="center_horizontal|center_vertical"
            android:text="2847 S Orange Ave, Orlando FL 35806"
            android:textColor="@color/dark_grey"
            android:textSize="@dimen/x15"
            app:typeface="@string/font_normal" />

        <com.ingic.tanfit.ui.views.AnyTextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/x15"
            android:gravity="center_horizontal|center_vertical"
            android:text="Have a Question?"
            android:textColor="@color/app_blue"
            android:textSize="@dimen/x18"
            app:typeface="@string/font_bold" />

        <com.ingic.tanfit.ui.views.AnyTextView
            android:id="@+id/txt_question"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/x10"
            android:layout_marginStart="@dimen/x10"
            android:layout_marginTop="@dimen/x3"
            android:alpha="0.8"
            android:gravity="center_horizontal|center_vertical"
            android:text="Please visit our website for any questions"
            android:textColor="@color/dark_grey"
            android:textSize="@dimen/x15"
            app:typeface="@string/font_normal" />

        <Button
            android:id="@+id/btn_visit_website"
            android:layout_width="match_parent"
            android:layout_height="@dimen/x45"
            android:layout_marginEnd="@dimen/x10"
            android:layout_marginStart="@dimen/x10"
            android:layout_marginTop="@dimen/x10"
            android:background="@color/app_blue"
            android:gravity="center"
            android:text="@string/visit_website"
            android:textAllCaps="false"
            android:textColor="@color/white" />

        <com.ingic.tanfit.ui.views.AnyTextView
            android:id="@+id/txt_aboutUs"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/x15"
            android:layout_marginStart="@dimen/x15"
            android:layout_marginTop="@dimen/x15"
            android:lineSpacingExtra="@dimen/x2"
            android:text="@string/long_lorem_ipsum"
            android:textColor="@color/dark_grey"
            android:textSize="@dimen/x12"
            app:typeface="@string/font_normal" />

    </LinearLayout>


</ScrollView>