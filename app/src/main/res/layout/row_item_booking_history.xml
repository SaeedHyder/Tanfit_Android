<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/x10"
        android:layout_marginEnd="@dimen/x10"
        android:layout_marginTop="@dimen/x10"
        android:orientation="horizontal"
        >
        
        <com.ingic.tanfit.ui.views.AnyTextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.3"

            android:text="@string/date"
            android:textColor="@color/black_text"
            android:textSize="@dimen/x15"
            app:typeface="@string/font_normal"/>

        <com.ingic.tanfit.ui.views.AnyTextView
            android:id="@+id/txt_date"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.8"
            android:text="November 13,2017"
            android:textColor="@color/app_text_gray"
            android:textSize="@dimen/x15"
            app:typeface="@string/font_normal"/>
        
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/x10"
        android:layout_marginEnd="@dimen/x10"
        android:layout_marginTop="@dimen/x7"
        android:orientation="horizontal"
        >

        <com.ingic.tanfit.ui.views.AnyTextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.3"
            android:text="@string/center"
            android:textColor="@color/black_text"
            android:textSize="@dimen/x15"
            app:typeface="@string/font_normal"/>

        <com.ingic.tanfit.ui.views.AnyTextView
            android:id="@+id/txt_center"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.8"
            android:text="Fitness Center 1"
            android:textColor="@color/app_text_gray"
            android:textSize="@dimen/x15"
            app:typeface="@string/font_normal"/>

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/x10"
        android:layout_marginEnd="@dimen/x10"
        android:layout_marginTop="@dimen/x7"
        android:orientation="horizontal"
        >

        <com.ingic.tanfit.ui.views.AnyTextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.3"
            android:text="@string/address"
            android:textColor="@color/black_text"
            android:textSize="@dimen/x15"
            app:typeface="@string/font_normal"/>

        <com.ingic.tanfit.ui.views.AnyTextView
            android:id="@+id/txt_address"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.8"
            android:maxLines="1"
            android:ellipsize="end"
            android:text="IR IRAN Tehran Vali Asr St Something House 2554 Apartment Theus"
            android:textColor="@color/app_text_gray"
            android:textSize="@dimen/x15"
            app:typeface="@string/font_normal"/>

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/x1"
        android:layout_marginTop="@dimen/x10"

        android:background="@color/border_gray_light"/>

</LinearLayout>