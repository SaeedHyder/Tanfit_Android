<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="@dimen/x15"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/x10"
        android:layout_marginBottom="@dimen/x10"
        android:layout_centerInParent="true">

        <LinearLayout
            android:id="@+id/header"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/golden"
            android:orientation="vertical">

            <com.ingic.tanfit.ui.views.AnyTextView
                android:id="@+id/txt_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/x10"
                android:gravity="center_horizontal"
                android:text="PREMIUM"
                android:textColor="@color/white"
                android:textSize="@dimen/x30"
                app:typeface="@string/font_bold" />

            <com.ingic.tanfit.ui.views.AnyTextView
                android:id="@+id/txt_title1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:text="MEMBERS"
                android:textColor="@color/white"
                android:textSize="@dimen/x25"
                app:typeface="@string/font_normal" />


        </LinearLayout>

        <RelativeLayout
            android:id="@+id/bottom"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/header"
            android:background="@drawable/white_bottom">

            <com.ingic.tanfit.ui.views.AnyTextView
                android:id="@+id/txt_description"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_marginEnd="@dimen/x15"
                android:layout_marginStart="@dimen/x15"
                android:layout_marginTop="@dimen/x10"
                android:gravity="center_horizontal"
                android:text="Unlimited* Classes PER MONTH"
                android:textColor="@color/app_golden"
                android:textSize="@dimen/x22"
                app:typeface="@string/font_normal" />

            <com.ingic.tanfit.ui.views.AnyTextView
                android:id="@+id/txt_description2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_below="@+id/txt_description"
                android:layout_marginEnd="@dimen/x15"
                android:layout_marginStart="@dimen/x15"
                android:layout_marginTop="@dimen/x15"
                android:gravity="center_horizontal"
                android:text="*Maximum two classes per day"
                android:textColor="@color/app_text_gray"
                android:textSize="@dimen/x16"
                app:typeface="@string/font_normal" />

            <Button
                android:id="@+id/btn_SubcribeNow"
                android:layout_width="match_parent"
                android:layout_height="@dimen/x40"
                android:layout_below="@+id/txt_description2"
                android:layout_marginBottom="@dimen/x15"
                android:layout_marginEnd="@dimen/x25"
                android:layout_marginStart="@dimen/x25"
                android:layout_marginTop="@dimen/x15"
                android:background="@color/app_blue"
                android:text="@string/subscribe_now"
                android:textAllCaps="false"
                android:textColor="@color/white" />

        </RelativeLayout>

        <com.ingic.tanfit.ui.views.AnyTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/bottom"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/x30_"
            android:background="@drawable/boxsubcription"
            android:gravity="center"
            android:text="IRR 1000"
            android:textColor="@color/dark_grey"
            android:textSize="@dimen/x18"
            app:typeface="@string/font_normal" />

    </RelativeLayout>
</RelativeLayout>