<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item
        android:bottom="-1dp"
        android:left="-1dp"
        android:right="-1dp"
        android:top="0dp">

        <shape android:shape="oval">
            <size android:height="@dimen/x100" android:width="@dimen/x100"/>
            <stroke
                android:width="1dp"
                android:color="@color/app_blue"
                android:dashGap="6dp"
                android:dashWidth="4dp" />

            <solid android:color="@android:color/transparent" />
        </shape>
    </item>
</layer-list>